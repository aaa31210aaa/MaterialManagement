        <activity
            android:name="ui.About"
            android:screenOrientation="portrait" />
        <activity
            android:name="ui.ForgetPwd"
            android:screenOrientation="portrait" />
        <activity
            android:name="ui.CustomCaptureActivity"
            android:screenOrientation="portrait" />
        <activity android:name="ui.OffLineCk"></activity>
    </application>

</manifest>