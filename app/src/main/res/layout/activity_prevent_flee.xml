<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="ui.PreventFlee">

    <include layout="@layout/common_title"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qb_px_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/smcx" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_10">

            <EditText
                android:id="@+id/code_etv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_bk"
                android:paddingBottom="@dimen/qb_px_5"
                android:paddingLeft="@dimen/qb_px_5"
                android:paddingRight="@dimen/qb_px_50"
                android:paddingTop="@dimen/qb_px_5"
                android:singleLine="true"
                android:text="" />

            <Button
                android:id="@+id/code_scavenging"
                android:layout_width="@dimen/qb_px_25"
                android:layout_height="@dimen/qb_px_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/qb_px_10"
                android:background="@drawable/scavenging" />

        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/fccx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/smxxcx"
        android:paddingTop="@dimen/qb_px_5"
        android:paddingBottom="@dimen/qb_px_5"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/title_size" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>