<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--主界面tab切换卡样式-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabTextColor">@color/tabtv_unselect</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabSelectedTextColor">@color/main_color</item>
    </style>

    <!--页面标题-->
    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 登陆check框 -->
    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <!--item TextView-->
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/qb_px_10</item>
    </style>

    <style name="OnClick">
        <item name="android:clickable">true</item>
        <item name="android:onClick">OnClick</item>
    </style>

    <!--右箭头-->
    <style name="RightArrow">
        <item name="android:layout_width">@dimen/qb_px_20</item>
        <item name="android:layout_height">@dimen/qb_px_20</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/qb_px_5</item>
        <item name="android:background">@drawable/right</item>
    </style>

    <!--加载窗口的样式-->
    <style name="loadingDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_corner</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!--下拉框样式-->
    <style name="HiddenSpinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/qb_px_5</item>
        <item name="android:paddingTop">@dimen/qb_px_5</item>
        <item name="android:paddingBottom">@dimen/qb_px_5</item>
        <item name="android:paddingRight">@dimen/qb_px_5</item>
        <item name="android:drawableRight">@drawable/xxjt</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:background">@drawable/editext_bk</item>
    </style>
</resources>
